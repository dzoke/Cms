{% if translation_domain is not defined %}
    {% set translation_domain = null %}
{% endif %}
{% if close is not defined %}
    {% set close = false %}
{% endif %}

{% for message in app.session.flashbag.get('warning') %}
    <script>
        window.onload = function() {
            $(document).ready(function () {
                $.notify({ icon: 'icon-warning', message: '{{ message|trans({}, translation_domain)|raw }}'}, {type: 'warning', placement: {from: "top", align: "center"}});
            });
        };
    </script>
{% endfor %}

